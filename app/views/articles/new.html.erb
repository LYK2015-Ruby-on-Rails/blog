<h1>New Article</h1>

<%= form_for :article, {url: articles_path} do |f| %>

    <% if @article.errors.any? %>
        <% @article.errors.full_messages.each do |msg| %>
            <%= msg %><br>
        <% end %>
    <% end %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_area :content %>

    <%= f.button :send %>
<% end %>